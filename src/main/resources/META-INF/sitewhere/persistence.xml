	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	<persistence-unit name="com.sitewhere" transaction-type="RESOURCE_LOCAL">
		<class>com.sitewhere.dao.device.jpa.Device</class>
		<class>com.sitewhere.dao.device.jpa.DeviceAssignment</class>
		<class>com.sitewhere.dao.device.jpa.Site</class>
		<class>com.sitewhere.dao.user.User</class>
		<class>com.sitewhere.dao.user.Group</class>
		<class>com.sitewhere.dao.user.GrantedAuthority</class>
	</persistence-unit>
</persistence>